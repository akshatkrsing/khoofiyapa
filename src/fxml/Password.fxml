<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginPane" prefHeight="354.0" prefWidth="430.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="User.controller.LoginController">
   <children>
      <VBox alignment="CENTER" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="authLabel" alignment="CENTER" prefHeight="46.0" prefWidth="312.0" text="Password Authentication" textAlignment="CENTER" textFill="#232222">
               <font>
                  <Font name="Arial" size="25.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" maxHeight="27.0" maxWidth="250.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="27.0" prefWidth="250.0" promptText="Enter Password" />
            <Button fx:id="verifyButton" mnemonicParsing="false" onAction="#login" text="verify" />
         </children>
      </VBox>
   </children>
</AnchorPane>
